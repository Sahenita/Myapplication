<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/coordinatorLayout"
                                            >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00406F"
                android:gravity="center_horizontal"
                android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:id="@+id/rl_main"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="5dp">

            <ImageView
                    android:id="@+id/home"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/home"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/tcs_logo1"/>

            <TextView
                    android:id="@+id/img_internet"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="online"
                    android:textSize="21dp"
                    android:textColor="#fff"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/green_circle"
            />
        </LinearLayout>


        <View
                android:id="@+id/vw"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000D17"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

            <com.rit.tcs.CustomText.CUstomTextRegular
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Get your "
                    android:textColor="#FFFFFF"
                    android:textSize="40sp"/>

            <com.rit.tcs.CustomText.CUstomTextRegular
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="FADO"
                    android:textColor="#D07313"
                    android:textSize="40sp"/>
        </LinearLayout>

        <View
                android:layout_width="450dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#9DB7CB"/>

        <RelativeLayout
                android:id="@+id/rl_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout android:layout_width="90dp"
                              android:layout_height="90dp"
                              android:background="@drawable/passcode_bg_progess">
                    <TextView
                            android:id="@+id/img1"
                            android:layout_height="90dp"
                            android:layout_width="90dp"
                            android:textSize="60sp"
                            android:inputType="textPassword"
                            android:gravity="center"
                            android:maxLength="1"
                            android:singleLine="true"
                            android:textColor="@color/light_gray"
                    />
                </LinearLayout>
            <LinearLayout android:layout_width="90dp"
                          android:layout_height="90dp"
                          android:background="@drawable/passcode_bg_progess"
                          android:layout_marginLeft="34dp"
            >
                <TextView
                        android:id="@+id/img2"
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:textSize="60sp"
                        android:inputType="textPassword"
                        android:gravity="center"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textColor="@color/light_gray"
                />
            </LinearLayout>
            <LinearLayout android:layout_width="90dp"
                          android:layout_height="90dp"
                          android:background="@drawable/passcode_bg_progess"
                          android:layout_marginLeft="34dp"
            >
                <TextView
                        android:id="@+id/img3"
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:textSize="60sp"
                        android:gravity="center"
                        android:maxLength="1"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/light_gray"
                />
            </LinearLayout>
            <LinearLayout android:layout_width="90dp"
                          android:layout_height="90dp"
                          android:background="@drawable/passcode_bg_progess"
                          android:layout_marginLeft="34dp"
            >
                <TextView
                        android:id="@+id/img4"
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:textSize="60sp"
                        android:gravity="center"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:textColor="@color/light_gray"
                />
            </LinearLayout>

            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/rl_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_img"
                android:layout_centerHorizontal="true">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <EditText
                        android:id="@+id/edit1"
                        android:layout_width="90dp"
                        android:layout_height="1dp"
                        android:maxLength="1"
                        android:inputType="textPassword"
                        android:gravity="center"
                        android:textSize="0sp"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/transparent"
                        android:cursorVisible="false"/>
                <EditText
                        android:id="@+id/edit2"
                        android:layout_width="90dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="34dp"
                        android:maxLength="1"
                        android:inputType="textPassword"
                        android:gravity="center"
                        android:cursorVisible="false"
                        android:textSize="0sp"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/transparent"/>
                <EditText
                        android:id="@+id/edit3"
                        android:layout_width="90dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="34dp"
                        android:background="@android:color/transparent"
                        android:maxLength="1"
                        android:inputType="textPassword"
                        android:gravity="center"
                        android:cursorVisible="false"
                        android:textSize="0sp"
                        android:textColor="@android:color/transparent"/>
                <EditText
                        android:id="@+id/edit4"
                        android:layout_width="90dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="34dp"
                        android:maxLength="1"
                        android:gravity="center"
                        android:textSize="0sp"
                        android:background="@android:color/transparent"
                        android:cursorVisible="false"
                        android:textColor="@android:color/transparent"/>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="horizontal">


            <EditText
                    android:id="@+id/edtTxt1"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/passcode_bg_progess"

                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:text=""
                    android:textColor="@color/yellow"
                    android:textSize="45sp"/>

            <EditText
                    android:id="@+id/edtTxt2"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/passcode_bg_progess"

                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:text=""
                    android:textColor="@color/yellow"
                    android:textSize="45sp"/>

            <EditText
                    android:id="@+id/edtTxt3"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/passcode_bg_progess"

                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:text=""
                    android:textColor="@color/yellow"
                    android:textSize="45sp"/>

            <EditText
                    android:id="@+id/edtTxt4"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/passcode_bg_progess"

                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:text=""
                    android:textColor="@color/yellow"
                    android:textSize="45sp"/>
        </LinearLayout>

        <com.rit.tcs.CustomText.CUstomTextRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Enter your passcode "
                android:textColor="#bfcdd6"
                android:textSize="32sp"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shadow"
                android:visibility="gone"/>

        <RelativeLayout
                android:id="@+id/hoverLyt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
android:clickable="false"
                android:visibility="gone">

            <ProgressBar
                    android:id="@+id/progressBarY1"
                    style="@style/MyProgressBar"
                    android:layout_width="153dp"
                    android:layout_height="153dp"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"/>
            <ProgressBar
                    android:id="@+id/progressBarY"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="153dp"
                    android:layout_height="153dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:indeterminateDrawable="@drawable/custom_progress_bar"
            />
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/tcslogo"/>
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_margin="20dp"
                  android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:textColor="#FFFFFF" android:textSize="22sp"
                  android:padding="10dp"
                  android:text="Powered By" android:gravity="center_vertical"
                  android:layout_height="60dp"/>
        <ImageView android:layout_width="60dp" android:layout_height="60dp"
                   android:src="@drawable/fado_round"/>
    </LinearLayout>

    <com.rit.tcs.MyKeyboard
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="55dp"/>

</RelativeLayout>
</android.support.constraint.ConstraintLayout>