<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="380dp"
                android:id="@+id/assetItem"
                android:background="#00406F"
                android:orientation="vertical">
    <LinearLayout android:layout_width="300dp"
                  android:layout_height="300dp"
                  android:gravity="center"
                  android:background="@drawable/bg_white_selected"
    >
        <ImageView
                android:id="@+id/assetImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:layout_above="@id/assetName"
                android:src="@drawable/mouse"/>
    </LinearLayout>


    <Button
            android:id="@+id/assetName"
            android:layout_alignParentBottom="true"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_selected"
            android:text="MOUSE"
            android:textColor="@color/white"
            android:textSize="17sp"/>


</RelativeLayout>