<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:id="@+id/assetItem"
                android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
    >
        <RelativeLayout
                android:id="@+id/relative_checked_type"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:gravity="center"
                android:background="@drawable/bg_white_selected"
        >

            <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="40dp"
                    android:paddingBottom="40dp"
                    android:paddingRight="60dp"
                    android:paddingLeft="60dp"
                    android:layout_centerInParent="true">

                <ImageView
                        android:id="@+id/assetImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mouse"
                />

            </RelativeLayout>
        </RelativeLayout>
        <com.rit.tcs.CustomText.CUstomButtonHelveticaRegular
                android:id="@+id/assetName"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_selected"
                android:text="MOUSE"
                android:singleLine="true"
                android:layout_marginBottom="1dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_below="@+id/relative_checked_type"/>
    </RelativeLayout>
</RelativeLayout>
