<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00406F"
                android:id="@+id/lockerManagementLyt"
                android:gravity="center_horizontal"
                android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
    >

        <RelativeLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
        >

            <ImageView
                    android:id="@+id/home"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/home"/>

            <com.rit.tcs.CustomText.CUstomTextBold
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="Smart IT Resource Locker"
                    android:textColor="#fff"
                    android:textSize="32dp"/>

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/tcs_logo_final1"/>
        </RelativeLayout>


        <View
                android:id="@+id/vw"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000D17"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

            <com.rit.tcs.CustomText.CUstomTextHelveticaRegular
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Select Category "
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"/>

            <com.rit.tcs.CustomText.CUstomTextHelveticaRegular
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="29sp"/>
            <com.rit.tcs.CustomText.CUstomTextHelveticaRegular
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text=""
                    android:textColor="#D07313"
                    android:textSize="36dp"/>
            <com.rit.tcs.CustomText.CUstomTextHelveticaRegular
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="29sp"/>
        </LinearLayout>

        <View
                android:layout_width="800dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#9DB7CB"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="#00406F"
                android:layout_marginRight="100dp">

            <ImageView
                    android:id="@+id/leftImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="130dp"
                    android:src="@drawable/ic_left"/>

            <!-- <android.support.v7.widget.RecyclerView
                     android:id="@+id/assetItemRclVw1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"
                     android:visibility="gone"
                     android:layout_toLeftOf="@+id/rightImg"
                     android:layout_toRightOf="@+id/leftImg"
                     android:layout_centerHorizontal="true"
                     android:gravity="center_horizontal"
                     android:orientation="horizontal"/>-->
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/viewPager"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@+id/rightImg"
                    android:layout_toRightOf="@+id/leftImg"
                    android:background="#00406F"
                    android:layout_marginLeft="-50dp"
                    android:layout_marginRight="69dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
            ></android.support.v7.widget.RecyclerView>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/assetItemRclVw"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@+id/rightImg"
                    android:layout_toRightOf="@+id/leftImg"
                    android:layout_height="wrap_content"
                    android:background="#00406F"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

            >

            </android.support.v7.widget.RecyclerView>


            <ImageView
                    android:id="@+id/rightImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="130dp"
                    android:src="@drawable/ic_right"/>

        </RelativeLayout>


        <com.rit.tcs.CustomText.CUstomTextHelveticaRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/release"
                android:paddingTop="10dp"
                android:paddingLeft="17dp"
                android:layout_marginTop="12dp"
                android:paddingBottom="10dp"
                android:layout_below="@+id/lockerId"
                android:paddingRight="17dp"
                android:id="@+id/back_to_cat"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:text="Back to Category"
                android:textColor="#FFFFFF"
                android:textSize="23sp"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shadow"
                android:visibility="gone"/>

        <RelativeLayout
                android:id="@+id/hoverLogin51"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:visibility="visible">

            <ProgressBar
                    android:id="@+id/progressBarY"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="153dp"
                    android:layout_height="153dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:indeterminateDrawable="@drawable/custom_progress_bar"
                    android:layout_marginBottom="10dp"/>

            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/tcslogo"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentLeft="true"
                  android:layout_marginBottom="20dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:textColor="#FFFFFF" android:textSize="22sp"
                  android:padding="10dp"
                  android:text="Powered By"
                  android:gravity="center_vertical"
                  android:layout_height="60dp"/>
        <ImageView android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:src="@drawable/fado_round"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/clear_data_btn"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
        <com.rit.tcs.CustomText.CUstomTextRebotoRegular
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:padding="10dp"
                android:visibility="gone"
                android:text="Powered By"
                android:gravity="center_vertical"
                android:layout_height="80dp"/>
        <ImageView android:layout_width="260dp"
                   android:layout_height="80dp"
                   android:src="@drawable/tcs_text_logo_final"/>
    </LinearLayout>
</RelativeLayout>