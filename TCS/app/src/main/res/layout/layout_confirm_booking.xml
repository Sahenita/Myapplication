<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00406F"
                android:gravity="center_horizontal"
                android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
    >

        <RelativeLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
        >

            <ImageView
                    android:id="@+id/home"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/home"/>

            <com.rit.tcs.CustomText.CUstomTextBold
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="Smart IT Resource Locker"
                    android:textColor="#fff"
                    android:textSize="32dp"/>

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/tcs_logo_final1"/>
        </RelativeLayout>


        <View
                android:id="@+id/vw"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000D17"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="220dp"
                android:layout_marginRight="220dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="72dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/bg_white"
                    android:orientation="vertical">
                <ScrollView android:layout_width="match_parent"
                            android:layout_height="match_parent">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        <com.rit.tcs.CustomText.CUstomTextRebotoRegular
                                android:layout_width="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:text="Confirm Booking"
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:textColor="#000000"
                                android:textSize="28sp"/>
                        <LinearLayout android:layout_width="160dp"
                                      android:layout_height="160dp"
                                      android:gravity="center"
                                      android:background="@drawable/bg_oval_dark"
                        >
                            <ImageView
                                    android:id="@+id/assetImg"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:padding="10dp"
                                    android:gravity="center_horizontal"
                                    android:src="@drawable/mouse"/>
                        </LinearLayout>


                        <com.rit.tcs.CustomText.CUstomTextRebotoLight
                                android:id="@+id/assetPathId"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="MOUSE >> OPTICAL MOUSE"
                                android:textColor="#BC0000"
                                android:textSize="20sp"/>
                        <View android:layout_width="match_parent"
                              android:background="#8A8D92"
                              android:layout_marginTop="10dp"
                              android:layout_marginLeft="130dp"
                              android:layout_marginRight="130dp"
                              android:layout_height="1px"/>
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal">
                            <LinearLayout android:layout_width="match_parent"
                                          android:layout_weight="1"
                                          android:paddingLeft="130dp"
                                          android:layout_height="wrap_content"
                                          android:orientation="vertical">

                                <com.rit.tcs.CustomText.CUstomTextRebotoRegular
                                        android:layout_width="wrap_content"
                                        android:paddingTop="10dp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-condensed"
                                        android:paddingLeft="5dp"
                                        android:text="Start Date:"
                                        android:textColor="#91A1AF"
                                        android:textSize="16sp"/>
                                <com.rit.tcs.CustomText.CUstomTextRebotoLight
                                        android:id="@+id/startTimes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-condensed"
                                        android:paddingLeft="5dp"
                                        android:text="13 April,2019 04:30 PM"
                                        android:textColor="#000000"
                                        android:textSize="18sp"/>
                            </LinearLayout>


                            <LinearLayout android:layout_width="match_parent"
                                          android:layout_weight="1"
                                          android:paddingRight="130dp"
                                          android:layout_height="wrap_content"
                                          android:orientation="vertical">


                                <com.rit.tcs.CustomText.CUstomTextRebotoRegular
                                        android:layout_width="wrap_content"
                                        android:paddingTop="10dp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-condensed"
                                        android:text="End Date:"
                                        android:paddingLeft="10dp"
                                        android:textColor="#91A1AF"
                                        android:textSize="16sp"/>
                                <com.rit.tcs.CustomText.CUstomTextRebotoLight
                                        android:id="@+id/endTimes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-condensed"
                                        android:paddingLeft="5dp"
                                        android:text="13 April,2019 04:30 PM"
                                        android:textColor="#000000"
                                        android:textSize="18sp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View android:layout_width="match_parent"
                              android:background="#B3C9E0"
                              android:layout_marginTop="10dp"
                              android:layout_marginLeft="130dp"
                              android:layout_marginRight="130dp"
                              android:layout_height="1px"/>
                        <com.rit.tcs.CustomText.CUstomTextRebotoRegular
                                android:id="@+id/bookingDuration"
                                android:layout_width="wrap_content"
                                android:paddingTop="10dp"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:text="01:00"
                                android:paddingLeft="10dp"
                                android:textColor="#010101"
                                android:textSize="37sp"/>
                        <com.rit.tcs.CustomText.CUstomTextRebotoRegular
                                android:layout_width="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:paddingLeft="5dp"
                                android:text="Booking Duration"
                                android:textColor="#666666"
                                android:textSize="14sp"/>

                        <com.rit.tcs.CustomText.CUstomTextRebotoRegular
                                android:id="@+id/confirm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_red"
                                android:paddingTop="10dp"
                                android:paddingLeft="50dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="50dp"
                                android:text="CONFIRM"
                                android:layout_marginBottom="15dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#FFFFFF"
                                android:textSize="24sp"/>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="32sp"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shadow"
                android:visibility="gone"/>


    </LinearLayout>
    <RelativeLayout
            android:id="@+id/hoverLogin81"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:visibility="gone">

        <ProgressBar
                android:id="@+id/progressBarY"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:indeterminateDrawable="@drawable/custom_progress_bar_blue"/>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/tcs_logo_blue"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:layout_marginBottom="10dp"
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentLeft="true"
                  android:layout_height="wrap_content">
        <com.rit.tcs.CustomText.CUstomTextRebotoRegular
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF" android:textSize="22sp"
                android:padding="10dp"
                android:text="Powered By" android:gravity="center_vertical"
                android:layout_height="60dp"/>
        <ImageView android:layout_width="60dp" android:layout_height="60dp"
                   android:src="@drawable/fado_round"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/clear_data_btn"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
        <com.rit.tcs.CustomText.CUstomTextRebotoRegular
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:padding="10dp"
                android:visibility="gone"
                android:text="Powered By"
                android:gravity="center_vertical"
                android:layout_height="80dp"/>
        <ImageView android:layout_width="260dp"
                   android:layout_height="70dp"
                   android:src="@drawable/tcs_text_logo_final"/>
    </LinearLayout>
</RelativeLayout>